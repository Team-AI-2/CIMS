<% if resource.errors.any? %>
  <div class="alert alert-danger pt-3 pb-3 mb-0">
    <strong>The following errors prevented the action</strong>
    <ul class="mb-0">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

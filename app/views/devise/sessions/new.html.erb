<%= render "devise/shared/error_messages", resource: resource %>

<div class="main-card mb-3 card mt-4 card-hover-shadow">
  <div class="card-header">
    <div class="card-header-title">
      <i class="fa fa-edit mr-2"></i>
      Log In
    </div>
  </div>

  <div class="card-body overflow-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="mb-3">
        <div><%= f.label :email, class: "col-form-label" %></div>
        <div><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></div>
      </div>

      <div class="mb-3">
        <div><%= f.label :password, class: "col-form-label" %></div>
        <div><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <%= f.submit "Log In", class: "mt-3 col-lg-12 btn btn-success p-2" %>
    <% end %>
  </div>
</div>

<script>
    $(document).ready(function () {
        $('#member_club_id, #member_position_id').select2();
        $(".select2").css("width", "100%");
    });
</script>
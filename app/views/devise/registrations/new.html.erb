<%= render "devise/shared/error_messages", resource: resource %>

<div class="main-card mb-3 card mt-4 card-hover-shadow">
  <div class="card-header">
    <div class="card-header-title">
      <i class="fa fa-edit mr-2"></i>
      Sign Up
    </div>
  </div>

  <div class="card-body overflow-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="mb-3">
        <div><%= f.label :email, class: "col-form-label" %></div>
        <div><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></div>
      </div>

      <div class="row">
        <div class="mb-3 col-lg-6">
          <div><%= f.label :first_name, class: "col-form-label" %></div>
          <div><%= f.text_field :f_name, class: "form-control" %></div>
        </div>
        <div class="mb-3 col-lg-6">
          <div><%= f.label :last_name, class: "col-form-label" %></div>
          <div><%= f.text_field :l_name, class: "form-control" %></div>
        </div>
      </div>

      <div class="row">
        <div class="mb-3 col-lg-6">
          <div><%= f.label :password, class: "col-form-label" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>
          <div>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
        <div class="mb-3 col-lg-6">
          <div><%= f.label :password_confirmation, class: "col-form-label" %></div>
          <div><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></div>
        </div>
      </div>

      <div class="row">
        <div class="mb-3 col-lg-6">
          <div><%= f.label :club, class: "col-form-label" %></div>
          <div><%= f.select :club_id, options_from_collection_for_select(Club.all, "id", "name"),
                            prompt: "Select a Club", required: true, class: "select2_single col-lg-12 form-control" %></div>
        </div>
        <div class="mb-3 col-lg-6">
          <div><%= f.label :position, class: "col-form-label" %></div>
          <div><%= f.select :position_id, options_from_collection_for_select(Position.all, "id", "name"),
                            prompt: "Select a Position", required: true, class: "select2_single col-lg-12 form-control" %></div>
        </div>
      </div>

      <%= f.submit "Sign up", class: "mt-3 col-lg-12 btn btn-success p-2" %>
    <% end %>
  </div>
</div>

<script>
    $(document).ready(function () {
        $('#member_club_id, #member_position_id').select2();
        $(".select2").css("width", "100%");
    });
</script>